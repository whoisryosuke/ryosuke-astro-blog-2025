---
import React, { type PropsWithChildren } from "react";
import "../styles/global.css";
import "../styles/tokens.css";
import "../styles/typography.css";

import "@fontsource/stack-sans-text/400.css"
import "@fontsource/stack-sans-text/700.css"
import '@fontsource/manrope/400.css';
import '@fontsource/manrope/700.css';
import "@fontsource/ibm-plex-mono";

// import "../styles/transitions.css";
import Header from "../components/sections/Header/Header";
import Navbar from "../components/sections/Header/Navbar/Navbar";
import FooterR2 from "../components/sections/Footer/FooterR2";
import ClientRouter from "astro/components/ClientRouter.astro";
import { ThemeProvider } from "../components/ThemeProvider";
import BaseHead from "../components/BaseHead.astro";

type Props = {
	title?: string;
	description?: string;
	image?: ImageMetadata;
};

const pathSplit = Astro.url.pathname.split("/").filter(val => val !='');
const basePath = pathSplit.length >= 1 ? pathSplit[0] : "root";

const { title, description, image } = Astro.props;

---

<html transition:name="root" transition:animate="none">
  <head>
    <BaseHead title={title} description={description} image={image} />

    <ClientRouter />
  </head>
  <body class={basePath}>
    <ThemeProvider client:load transition:persist />
    <Header client:load transition:persist />
    <Navbar client:load path={Astro.url.pathname} transition:persist />

    
    <main transition:animate="fade">
      <slot />
    </main>
    
	  <FooterR2 path={Astro.url.pathname} client:load transition:persist  />
  </body>
</html>
