---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { components} from '../../components/mdx/MDXProvider';
import RootLayout from '../../layouts/RootLayout.astro';
import { getBlogPostDescription } from '../../utils/blog';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;


const post = Astro.props;
const { Content } = await render(post);

const description = getBlogPostDescription(post.data.description, post.body)

---

<RootLayout title={post.data.title} description={description} image={post.data.cover_image}>
<BlogPost {...post.data} body={post.body}>
	<Content components={components} />
</BlogPost>
</RootLayout>