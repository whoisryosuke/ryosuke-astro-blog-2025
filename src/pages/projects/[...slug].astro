---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { components} from '../../components/mdx/MDXProvider';
import RootLayout from '../../layouts/RootLayout.astro';
import { FEATURED_WORK_SLIDES, type FeaturedWorkSlideData } from '../../components/page/Frontpage/FeaturedWork/FeaturedWorkSlider/slides';
import ProjectPost from '../../layouts/ProjectPost.astro';

export async function getStaticPaths() {
	const posts = await getCollection('projects');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'projects'>;

const project = Astro.props;
const { Content } = await render(project);

const title = `${project.data.title}.project`

---

<RootLayout title={title} description={project.data.description}>
    <ProjectPost project={project}>
		<Content components={components} />
	</ProjectPost>
</RootLayout>